@model FMS_DEV.ViewModel.InvoiceImportViewModel
@{
    ViewData["Title"] = "Details";
}

<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">

            <div class="card">
                <div class="card-header bg-success">
                    <h4 class="m-b-0 text-white">Import-Invoice</h4>
                </div>

                <div class="card-body">
                    <!--Job No.-->
                    <div class="row">

                        <div class="col-md-4">
                            

                        </div>

                        <div class="col-md-8"></div>

                    </div><br />

                    <!--Job Details-->
                    <div class="row">
                        <div class="col-md-6">
                            <b>Job Details</b>
                        </div>
                        <div class="col-md-6"></div>
                    </div>

                    <div style="border:1px  solid black; padding: 10px 10px 10px 10px; background-color:#E5F2FB; border-radius:10px;">

                        <!--Job No & Date-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Job No">Job No.</label>
                                    </div>
                                    <div class="col-md-6">
                                        <span id="jobno">
                                            <b>  @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().JobNo) </b>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Date">Date</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().JobDate)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4"></div>

                        </div><br />

                        <!--Sales Person-->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Vessel">Vessel</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().VesselImportJobDtlNavigation.VesselName)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6"></div>
                        </div>

                        <br />
                        <!--Vessel ,ETD (Date) & Shipper-->
                        <div class="row">

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Vessel">Voyage</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().Voyage)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="ETD (Date)">Agent</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().Agent)

                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Shipper">Shipper</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().ShippingLine)
                                    </div>
                                </div>
                            </div>

                        </div><br />

                        <!--Final Destination & Consignee-->
                        <div class="row">

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Final Destination">Final Destination</label>
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().Pol)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Final Destination">Coloader</label>
                                    </div>
                                    <div class="col-md-6">
                                      @*   @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().ColoaderImportNavigation.Name) *@
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Consignee">Coload</label>
                                    </div>
                                    <div class="col-md-6">
                                        @* @Html.DisplayFor(m => Model.ImportJobHdMulti.FirstOrDefault().IsCoLoad) *@
                                    </div>
                                </div>
                            </div>
                        </div><br />
                    </div>
                    <form asp-action="Edit" id="InvoiceHDForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="InvoiceHdMulti.FirstOrDefault().InvoiceNo" />
                        <br />
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-4">
                                    <label for="Customer"><b>B/L Number </b></label>
                                </div>
                                <div class="col-md-8">
@*                                    <b>  @Html.DisplayFor(m => Model.InvoiceHdMulti.FirstOrDefault().Blno) </b>
*@                                    <select id="InvoiceHdMulti_0__Blno" asp-for="InvoiceHdMulti.FirstOrDefault().Blno" class="form-control" asp-items="ViewBag.HouseBL" disabled></select>

                                </div>

                            </div>
                        </div>
                        <hr>
                        <!--Invoice-->
                        <div class="row">
                            <div class="col-md-6">
                                <h4>
                                    Invoice
                                </h4>
                            </div>
                            <div class="col-md-6"></div>
                        </div>

                        <!--Invoice NO,Date,Customer & Exchange Rate-->
                        <div class="row">

                            <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="Date ">Invoice No </label>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" asp-for="InvoiceHdMulti.FirstOrDefault().InvoiceNo" class="form-control" readonly />
                                        </div>
                                    </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Date ">Date </label>
                                    </div>
                                    <div class="col-md-8">
                                            @Html.DisplayFor(m => Model.InvoiceHdMulti.FirstOrDefault().Date)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Customer">Customer</label>
                                    </div>
                                    <div class="col-md-8">
                                        <select id="IntendedVessel" asp-for="InvoiceHdMulti.FirstOrDefault().Customer" class="form-control" asp-items="ViewBag.Customer" disabled></select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="Exchange Rate">Exchange Rate</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" asp-for="InvoiceHdMulti.FirstOrDefault().ExchangeRate" class="form-control"  readonly/>
                                        <span asp-validation-for="InvoiceHdMulti.FirstOrDefault().ExchangeRate" class="text-danger" readonly></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Invoice NO,Date,Customer & Exchange Rate-->

                        <br />
                        <div class="row">

                            <div class="col-md-4">
                            </div>

                            <div class="col-md-4">
                            </div>

                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label for="Customer">Debit Acc</label>
                                    </div>
                                    <div class="col-md-8">
                                        <select id="IntendedVessel" asp-for="InvoiceHdMulti.FirstOrDefault().DebitAcc" class="form-control" asp-items="ViewBag.AccountsCodes" disabled></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">

                            <div class="col-md-4">
                            </div>

                            <div class="col-md-4">
                            </div>

                            <div class="col-md-4">
                                <div class="row">
@*                                    <div class="col-md-4">
                                        <label for="Customer">Credit Acc</label>
                                    </div>
                                    <div class="col-md-8">
                                        <select id="IntendedVessel" asp-for="InvoiceHdMulti.FirstOrDefault().CreditAcc" class="form-control" asp-items="ViewBag.AccountsCodes" disabled></select>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                        <!--Table for Charge Items --><br />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-hover border table-striped" id="tblContainer">
                                        <thead>
                                            <tr>
                                                <th>Charge Item</th>
                                                <th>Unit</th>
                                                <th>Rate </th>
                                                <th>Currency</th>
                                                <th>Qty</th>
                                                <th>Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ContainerDetailsBody">
                                            <tr id="tablerow0" hidden>
                                                <td style="width:30%;"> <select id="ChargeItemRw" asp-for="InvoiceDtMulti.FirstOrDefault().ChargeItem" value="" name="ChargeItemRw" class="form-control" asp-items="ViewBag.ChargeItemsList"></select> </td>
                                                <td style="width:10%;"> <select id="Unit" asp-for="InvoiceDtMulti.FirstOrDefault().Unit" value="" name="Unit" class="form-control" asp-items="ViewBag.UnitList"></select> </td>
                                                <td style="width:10%;"> <input type="text" id="Rate" asp-for="InvoiceDtMulti.FirstOrDefault().Rate" name="Rate" value="" class="form-control" onchange="calculateAmount(this)"></td>
                                                <td> <select id="Currency" asp-for="InvoiceDtMulti.FirstOrDefault().Currency" value="" name="Currency" class="form-control" asp-items="ViewBag.CurrencyList"></select> </td>
                                                <td> <input type="text" id="Qty" asp-for="InvoiceDtMulti.FirstOrDefault().Qty" name="Qty" value="" class="form-control" onchange="calculateAmount(this)"></td>
                                                <td> <input type="text" id="Amount" asp-for="InvoiceDtMulti.FirstOrDefault().Amount" name="Amount" value="" class="form-control" readonly></td>
                                                <td> <input type="button" id="btnRemove" class="btn btn-danger" value="X" name="RemoveBttn" onclick="RemoveRow(this)" /></td>
                                            </tr>
                                            @{
                                                var i = 0;
                                                @foreach (var item in Model.InvoiceDtMulti)
                                                {
                                                    i++;
                                                    <tr class="tablerow_@i">

                                                        <td>
                                                            <select id="ChargeItemRw" asp-for="@item.ChargeItem" value="@item.ChargeItem" name="ChargeItemRw" class="form-control" asp-items="ViewBag.ChargeItemsList" disabled></select>
                                                        </td>

                                                        <td>
                                                            <select asp-for="@item.Unit" name="Unit" value="@item.Unit" class="form-control" asp-items="ViewBag.UnitList" disable readonly></select>
                                                        </td>
                                                        <td>
                                                            <input type="text" asp-for="@item.Rate" name="Rate" value="@item.Rate" class="form-control rate" style="text-align: right;" readonly>
                                                        </td>
                                                        <td>
                                                            <select asp-for="@item.Currency" name="Currency" value="@item.Currency" class="form-control" asp-items="ViewBag.CurrencyList" readonly></select>
                                                        </td>
                                                        <td>
                                                            <input type="text" asp-for="@item.Qty" name="Qty" value="@item.Qty" class="form-control qty" style="text-align: right;" readonly>
                                                        </td>
                                                        <td>
                                                            <input type="text" asp-for="@item.Amount" name="Amount" value="@String.Format("{0:N2}", item.Amount)" class="form-control amount" style="text-align: right;" readonly>
                                                        </td>

                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!--Add button Charge Items-->
                            <div class="col-md-4">
@*                                <div class="form-group">

                                    <input id="add" type="button" value="+ Charge Item" onclick="AddRow(this)"
                                           class="btn btn-success" disabled/>
                                </div>*@
                            </div>
                            <div class="col-md-3"></div>
                            <!--Total LKR-->
                            <div class="col-md-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="TotalAmount">Total Amount LKR:</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" asp-for="InvoiceHdMulti.FirstOrDefault().TotalInvoiceAmountLkr" class="form-control" id="TotalAmtLKR"
                                               value="@String.Format("{0:N2}", Model.InvoiceHdMulti.FirstOrDefault().TotalInvoiceAmountLkr)"
                                               style="text-align: right;" readonly />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="TotalAmount">Total Amount USD:</label>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="text" asp-for="InvoiceHdMulti.FirstOrDefault().TotalInvoiceAmountUsd" class="form-control" id="TotalAmtUSD"
                                               value="@String.Format("{0:N2}", Model.InvoiceHdMulti.FirstOrDefault().TotalInvoiceAmountUsd)"
                                               style="text-align: right;" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-1"></div>
                        </div>

                        <!--Remarks Textbox-->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <h6 class="box-title">Remarks</h6>
                                    <div class="col-md-12">
                                        <textarea asp-for="InvoiceHdMulti.FirstOrDefault().Remarks" class="form-control" name="Remarks" type="text" placeholder="Type here your Remarks" rows="5" disabled> </textarea>
                                        @* <input asp-for="BLTypeID" class="form-control" />*@
                                        <span asp-validation-for="InvoiceHdMulti.FirstOrDefault().Remarks" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                        </div><br />
                    </form>

                </div>


            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
        <!-- ============================================================== -->
        <!-- Orginal details End -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- Container fluid  END -->
    <!-- ============================================================== -->
</div>
