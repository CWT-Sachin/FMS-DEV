@model IEnumerable<FMS_DEV.Models.RefAgent>

@{
    ViewData["Title"] = "Agent";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<!-- ============================================================== -->
<!-- Main wrapper - style you can find in pages.scss -->
<!-- ============================================================== -->
<div id="main-wrapper">
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h4 class="text-themecolor">Master Reference</h4>
                </div>
                <div class="col-md-7 align-self-center text-right">
                    <div class="d-flex justify-content-end align-items-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Master Reference</li>
                        </ol>
                        <button type="button" onclick="location.href='@Url.Action("Create", "RefAgents")'" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create New Agent</button>
                        @*   <button type="button" class="btn btn-info d-none d-lg-block m-l-15"><i class="fa fa-plus-circle"></i> Create New Staff</button>*@
                        @* onclick="location.href='@Url.Action("Create", "User")'"*@
                        @*asp-action="Create"*@

                    </div>
                </div>
            </div>
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h1 class="text-themecolor">Agents</h1>
                </div>
                <div class="col-md-3 align-self-center text-right">
                </div>
                <!-- Search-->
                <div class="col-md-4 align-self-center text-right">
                    @using (Html.BeginForm("Index", "RefAgents", new { searchString = "" }, FormMethod.Post))
                    {
                        <div class="input-group">

                            <input type="text" id="searchString" name="searchString" class="form-control" placeholder="Search by Agent name..." />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-info"> <i class="fas fa-search-plus"></i> Go!</button>
                            </div>
                        </div>
                    }
                </div>
                <!-- End Search-->
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <!-- ============================================================== -->
                        <!-- Orginal code Start  -->
                        <!-- ============================================================== -->
                        <table class="table color-bordered-table purple-bordered-table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AgentName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address1)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address2)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address3)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.City)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.County)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TelNo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Port)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsActive)
                                    </th>

                                    <th>
                                        <p style="color:mediumslateblue">SelectionSelectionSelectionSelection</p>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AgentName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address1)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address2)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Address3)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.City)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.County)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TelNo)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Port.PortName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsActive)
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-rounded btn-primary" asp-action="Edit" asp-route-id="@item.AgentId"><i class="fa fa-edit"></i> Edit</a> |
                                            <a class="btn btn-sm btn-rounded btn-success" asp-action="Details" asp-route-id="@item.AgentId"><i class="fa  ti-view-list-alt"></i> Details</a> |
                                         @*   <a class="btn btn-sm btn-rounded btn-danger" asp-action="Delete" asp-route-id="@item.AgentId"><i class="mdi mdi-delete-forever"></i> Delete</a>*@
                                            

                                           @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                         </table>
                        <!-- ============================================================== -->
                        <!-- Orginal code END  -->
                        <!-- ============================================================== -->

                    </div>
                </div>
            </div>
            <div class="container">
                @if (pager.TotalPages > 0)
                {
                    <ul class="pagination justify-content-end">
                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                <a class="page-link" aps-controller="RefAgents" asp-action="Index" asp-route-pg="@pge"> @pge </a>
                            </li>
                        }
                    </ul>
                    <ul class="pagination justify-content-end">
                        <p> Page @(pager.TotalPages < pager.CurrentPage ? 0 : pager.CurrentPage) of @pager.TotalPages </p>
                    </ul>
                }
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Container fluid  END -->
        <!-- ============================================================== -->

    </div>
</div>
<!-- ============================================================== -->
<!-- Main wrapper -  END style you can find in pages.scss -->
<!-- ============================================================== -->